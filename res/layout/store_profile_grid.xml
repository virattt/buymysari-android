<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rela_storeprofile_grid_fragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/thumbnail_relative"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:orientation="horizontal"
        android:padding="5dip" >

        <LinearLayout
            android:id="@+id/thumbnail_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            android:padding="3dip" >

            <com.buymysari.CircularImageView
                android:id="@+id/list_Store_profile_grid_logo_image"
                android:layout_width="80dp"
                android:layout_height="80dp" >
            </com.buymysari.CircularImageView>
        </LinearLayout>

        <!-- Title Of Song -->

        <TextView
            android:id="@+id/store_profilegrid_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail_linear"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/thumbnail_linear"
            android:text=""
            android:textColor="#466aaf"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/store_url_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/store_profilegrid_name"
            android:layout_below="@+id/store_profilegrid_name"
            android:text=""
            android:textColor="#999592"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/store_profile_grid_closet_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/thumbnail_relative"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="#999592"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/subscribe_store_profile_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/store_profile_grid_closet_txt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="41dp"
        android:text=""
        android:textColor="#999592"
        android:textSize="16sp" />

    <GridView
        android:id="@+id/gridView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/store_profile_grid_closet_txt"
        android:layout_alignRight="@+id/subscribe_store_profile_txt"
        android:layout_below="@+id/store_profile_grid_closet_txt"
        android:layout_marginTop="23dp"
        android:columnWidth="80dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" >
    </GridView>

</RelativeLayout>