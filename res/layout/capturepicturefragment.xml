<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_cameraimageview_fragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/camera_preview_fragment_imageview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/conform"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dip"
            android:layout_marginBottom="27dp"
            android:background="#41d845"
            android:text="CONFIRM"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnChangePicture"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignLeft="@+id/conform"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/conform"
            android:layout_marginBottom="24dp"
            android:background="#41d845"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="CHANGE PICTURE" />
    </RelativeLayout>

</RelativeLayout>