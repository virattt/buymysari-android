<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/new_register"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scroll_regi_store"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="100dip"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lin_regi_store"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/fristName_edt_lg_store"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:background="@drawable/rounded_login"
                android:ellipsize="start"
                android:ems="10"
                android:gravity="center"
                android:hint="FIRST NAME"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                 />

            <EditText
                android:id="@+id/lastName_edt_lg_store"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_below="@+id/fristName_edt_lg_store"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:background="@drawable/rounded_login"
                android:ellipsize="start"
                android:ems="10"
                android:gravity="center"
                android:hint="LAST NAME"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email_edt_lg_store"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_below="@+id/lastName_edt_lg_store"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:background="@drawable/rounded_login"
                android:ems="10"
                android:gravity="center"
                android:hint="EMAIL ADDRESS"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password_edt_lg_store"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_below="@+id/email_edt_lg_store"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:background="@drawable/rounded_login"
                android:ellipsize="start"
                android:ems="10"
                android:gravity="center"
                android:hint="************"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/store_name_edt"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_below="@+id/password_edt_lg_store"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/rounded_login"
                android:ellipsize="start"
                android:ems="10"
                android:gravity="center"
                android:hint="STORE NAME"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                 />

            <EditText
                android:id="@+id/store_website_edt"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_below="@+id/store_name_edt"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:background="@drawable/rounded_login"
                android:ems="10"
                android:gravity="center"
                android:hint="WEBSITE"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/store_phone_edt"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_below="@+id/store_website_edt"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:background="@drawable/rounded_login"
                android:ems="10"
                android:gravity="center"
                android:hint="PHONE"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/store_address_edt"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_below="@+id/store_phone_edt"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:background="@drawable/rounded_login"
                android:ems="10"
                android:gravity="center"
                android:hint="ADDRESS"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/store_city_edt"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_below="@+id/store_address_edt"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:background="@drawable/rounded_login"
                android:ems="10"
                android:gravity="center"
                android:hint="CITY"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/register_btn_store"
                android:layout_width="160dip"
                android:layout_height="30dip"
                android:layout_gravity="right"
                android:layout_marginRight="40dip"
                android:background="@drawable/rounded_btn"
                android:text="REGISTER"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>