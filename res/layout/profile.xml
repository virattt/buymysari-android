    <EditText
        android:id="@+id/edtProfileLastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtProfileFirstname"
        android:layout_below="@+id/edtProfileFirstname"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtProfilePAssword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtProfileLastname"
        android:layout_below="@+id/edtProfileEmail"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnProfileUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtProfilePAssword"
        android:layout_below="@+id/edtProfilePAssword"
        android:layout_marginTop="18dp"
        android:text="Update" />

    <Button
        android:id="@+id/btnProfileCreateStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnProfileUpdate"
        android:layout_alignBottom="@+id/btnProfileUpdate"
        android:layout_alignRight="@+id/edtProfilePAssword"
        android:text="Crate Store" />

    <EditText
        android:id="@+id/edtProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtProfilePAssword"
        android:layout_below="@+id/edtProfileLastname"
        android:ems="10"
        android:hint="EmailId"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edtProfileFirstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

</RelativeLayout>