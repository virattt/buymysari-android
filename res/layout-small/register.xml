<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/new_register"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true" >

        <EditText
            android:id="@+id/fristName_edt_lg"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:background="@drawable/rounded_login"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center"
            android:hint="FIRST NAME"
            android:inputType="textPersonName"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/lastName_edt_lg"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_below="@+id/fristName_edt_lg"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:textSize="15sp"
            android:background="@drawable/rounded_login"
            android:textColor="@android:color/black"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center"
            android:hint="LAST NAME"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_edt_lg"
            android:layout_width="fill_parent"
           android:layout_height="40dip"
            android:layout_below="@+id/lastName_edt_lg"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dip"
            android:textSize="15sp"
            android:layout_marginRight="40dip"
            android:background="@drawable/rounded_login"
            android:textColor="@android:color/black"
            android:ems="10"
            android:gravity="center"
            android:hint="EMAIL ADDRESS"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password_edt_lg"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_below="@+id/email_edt_lg"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dip"
            android:textSize="15sp"
            android:layout_marginRight="40dip"
            android:background="@drawable/rounded_login"
            android:textColor="@android:color/black"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center"
            android:hint="************"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="160dip"
            android:layout_height="30dip"
            android:layout_alignRight="@+id/password_edt_lg"
            android:layout_below="@+id/password_edt_lg"
            android:background="@drawable/rounded_btn"
            android:gravity="center"
            android:text="REGISTER"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>